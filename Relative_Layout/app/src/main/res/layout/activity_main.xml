<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/edit_distancia"
        android:layout_width="match_parent"
        android:hint="Distância"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/text_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_distancia"
        android:layout_centerHorizontal="true"
        android:text="Total de quilômetros"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edit_preco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_a"
        android:layout_marginTop="32dp"
        android:hint="Preço" />

    <TextView
        android:id="@+id/text_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_preco"
        android:layout_centerHorizontal="true"
        android:text="Preço por litro"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edit_auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_b"
        android:layout_marginTop="32dp"
        android:hint="Autonomia" />

    <TextView
        android:id="@+id/text_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_auto"
        android:layout_centerHorizontal="true"
        android:text="KMs por litro"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/text_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_c"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:textStyle="bold"
        android:text="Seu gasto dtotal será de:"
        android:textAllCaps="true"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/text_e"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_d"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:textColor="@color/teal_700"
        android:text="R$ 0"
        android:textAllCaps="true"
        android:textSize="32sp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_e"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/teal_200"
        android:padding="16dp"
        android:text="Calcular" />




</RelativeLayout>